{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--import",
                "tsx"
            ],
            "args": [
                "${workspaceFolder}/apps/api/src/index.ts"
            ],
            "cwd": "${workspaceFolder}/apps/api",
            "envFile": "${workspaceFolder}/apps/api/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "console",
            "restart": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Debug API Server (with inspect)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "watch",
                "src/index.ts"
            ],
            "cwd": "${workspaceFolder}/apps/api",
            "envFile": "${workspaceFolder}/apps/api/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "console",
            "restart": true
        }
    ]
}